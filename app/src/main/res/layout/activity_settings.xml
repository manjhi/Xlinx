                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_10"
                            android:src="@drawable/ic_right_arrow" />

                    </RelativeLayout>

                </RelativeLayout>

                <ImageView
                    android:layout_width="@dimen/dp_65"
                    android:layout_height="@dimen/dp_65"
                    android:background="@drawable/background_circle_blue"
                    android:padding="@dimen/dp_22"
                    android:src="@drawable/ic_lock" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/AppTheme"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_65"
                android:layout_margin="@dimen/dp_10">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/sp_20"
                        android:background="@drawable/background_text_view_settings">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_70"
                            android:fontFamily="@font/poppins"
                            android:text="App Theme"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_10"
                            android:src="@drawable/ic_right_arrow" />

                    </RelativeLayout>

                </RelativeLayout>

                <ImageView
                    android:layout_width="@dimen/dp_65"
                    android:layout_height="@dimen/dp_65"
                    android:background="@drawable/background_circle_blue"
                    android:padding="@dimen/dp_22"
                    android:src="@drawable/ic_graphic_desig" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/AppLanguage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_65"
                android:layout_margin="@dimen/dp_10">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/sp_20"
                        android:background="@drawable/background_text_view_settings">

                        <TextView
                            android:id="@+id/app_language_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_70"
                            android:fontFamily="@font/poppins"
                            android:text="App Language"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16" />

                        <ImageView
                            android:id="@+id/rightArrow"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_10"
                            android:src="@drawable/ic_right_arrow" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_toLeftOf="@id/rightArrow"
                            android:fontFamily="@font/poppins"
                            android:text="Default"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/sp_16" />

                    </RelativeLayout>

                </RelativeLayout>

                <ImageView
                    android:layout_width="@dimen/dp_65"
                    android:layout_height="@dimen/dp_65"
                    android:background="@drawable/background_circle_blue"
                    android:padding="@dimen/dp_22"
                    android:src="@drawable/ic_coding" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Logout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_65"
                android:layout_margin="@dimen/dp_10">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/sp_20"
                        android:background="@drawable/background_text_view_settings">

                        <TextView
                            android:id="@+id/logout_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_70"
                            android:fontFamily="@font/poppins"
                            android:text="Log Out"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_10"
                            android:src="@drawable/ic_right_arrow" />

                    </RelativeLayout>

                </RelativeLayout>

                <ImageView
                    android:layout_width="@dimen/dp_65"
                    android:layout_height="@dimen/dp_65"
                    android:background="@drawable/background_circle_blue"
                    android:padding="@dimen/dp_22"
                    android:src="@drawable/ic_logout" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>