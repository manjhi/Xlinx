<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.CabActivity"
    android:orientation="vertical">

    <include layout="@layout/app_bar_"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hire a Cab"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins"
        android:textStyle="bold"
        android:textSize="@dimen/sp_16"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_15"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Picking up"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_2"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins"
        android:textSize="@dimen/sp_14"
        android:layout_marginLeft="@dimen/dp_15"/>

    <EditText
        android:id="@+id/src"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:hint="Enter Your Location"
        android:inputType="text"
        android:fontFamily="@font/poppins"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:textSize="@dimen/sp_14"
        android:padding="@dimen/dp_10"
        android:drawablePadding="@dimen/dp_10"
        android:drawableLeft="@drawable/ic_maps_and_flags"
        android:background="@drawable/background_edit_text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dropping Off"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_2"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins"
        android:textSize="@dimen/sp_14"
        android:layout_marginLeft="@dimen/dp_15"/>

    <EditText
        android:id="@+id/des"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:hint="Enter Your Location"
        android:inputType="text"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:textSize="@dimen/sp_14"
        android:padding="@dimen/dp_10"
        android:fontFamily="@font/poppins"
        android:drawablePadding="@dimen/dp_10"
        android:drawableLeft="@drawable/ic_maps_and_flags"
        android:background="@drawable/background_edit_text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_5"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick-up date"
                android:layout_marginBottom="@dimen/dp_2"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_10"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_45"
                android:hint="dd/mm/yyyy"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:textSize="@dimen/sp_14"
                android:padding="@dimen/dp_10"
                android:fontFamily="@font/poppins"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_calendar"
                android:background="@drawable/background_edit_text"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:layout_marginBottom="@dimen/dp_2"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_10"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_45"
                android:hint="11:00"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:textSize="@dimen/sp_14"
                android:paddingLeft="@dimen/dp_10"
                android:fontFamily="@font/poppins"
                android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center_vertical"
                android:background="@drawable/background_edit_text"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_5"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drop-off date"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins"
                android:textSize="@dimen/sp_14"
                android:layout_marginBottom="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dp_10"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_45"
                android:hint="dd/mm/yyyy"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:textSize="@dimen/sp_14"
                android:padding="@dimen/dp_10"
                android:fontFamily="@font/poppins"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_calendar"
                android:background="@drawable/background_edit_text"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adults(18+)"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins"
                android:textSize="@dimen/sp_14"
                android:layout_marginBottom="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dp_10"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_45"
                android:hint="12:00"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:fontFamily="@font/poppins"
                android:textSize="@dimen/sp_14"
                android:paddingLeft="@dimen/dp_10"
                android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center_vertical"
                android:background="@drawable/background_edit_text"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose your car"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins"
            android:textSize="@dimen/sp_14"
            android:layout_marginBottom="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_10"/>

        <EditText
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_45"
            android:hint="Select Car"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:textSize="@dimen/sp_14"
            android:paddingLeft="@dimen/dp_10"
            android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
            android:drawablePadding="@dimen/dp_5"
            android:fontFamily="@font/poppins"
            android:gravity="center_vertical"
            android:background="@drawable/background_edit_text"/>

    </LinearLayout>

    <Button
        android:id="@+id/search"
        android:layout_width="@dimen/dp_250"
        android:layout_height="@dimen/dp_45"
        android:layout_gravity="center"
        android:text="SEARCH"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@drawable/background_button_round_corners"/>

</LinearLayout>