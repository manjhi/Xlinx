<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.BottomSheetSortFragment"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins"
                android:text="SORT"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/ic_error_grey" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="#d3d3d3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Availability"
                android:fontFamily="@font/poppins"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Show Available First"
                android:fontFamily="@font/poppins"
                android:textColor="@color/grey" />

            <ImageView
                android:id="@+id/availability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/blue_circle"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="#d3d3d3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Duration"
                android:fontFamily="@font/poppins"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Shortest to Longest"
                android:fontFamily="@font/poppins"
                android:textColor="@color/grey" />

            <ImageView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/grey_circle_outline"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="#d3d3d3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Departure"
                android:fontFamily="@font/poppins"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Earliest to Late"
                android:fontFamily="@font/poppins"
                android:textColor="@color/grey" />

            <ImageView
                android:id="@+id/departureETL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/grey_circle_outline"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Late to Earliest"
                android:fontFamily="@font/poppins"
                android:textColor="@color/grey" />

            <ImageView
                android:id="@+id/departureLTE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/grey_circle_outline"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="#d3d3d3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Arrival"
                android:fontFamily="@font/poppins"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Earliest to Late"
                android:fontFamily="@font/poppins"
                android:textColor="@color/grey" />

            <ImageView
                android:id="@+id/ArrivalETL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/grey_circle_outline"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Late to Earliest"
                android:fontFamily="@font/poppins"
                android:textColor="@color/grey" />

            <ImageView
                android:id="@+id/ArrivalLTE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/grey_circle_outline"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="#d3d3d3" />

    </LinearLayout>

</FrameLayout>