<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="start">

    <android.support.design.widget.NavigationView
        android:layout_marginTop="@dimen/dp_70"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:layout_alignParentLeft="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/profileCircleImage"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_20"
                    android:gravity="center"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#C4C4C4"
                    android:src="@drawable/ic_man_user"/>

                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profileCircleImage"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/NameNav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:text="Upkar Singh"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/blue"
                        app:fontFamily="@font/poppins"/>

                    <TextView
                        android:id="@+id/EmailNav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="99999-88888"
                        android:drawablePadding="@dimen/dp_5"
                        android:drawableLeft="@drawable/ic_mobile_phone"
                        android:textColor="@color/grey"
                        app:fontFamily="@font/poppins"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:background="@color/grey">

                    </View>

                    <TextView
                        android:id="@+id/newGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_group"
                        android:drawablePadding="@dimen/dp_15"
                        android:padding="@dimen/dp_5"
                        android:layout_margin="@dimen/dp_5"
                        android:text="New Group"
                        android:textColor="@color/black"
                        app:fontFamily="@font/poppins"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:background="#d3d3d3">

                    </View>

                    <TextView
                        android:id="@+id/settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_settings_work_tool"
                        android:drawablePadding="@dimen/dp_15"
                        android:padding="@dimen/dp_5"
                        android:layout_margin="@dimen/dp_5"
                        android:text="Settings"
                        android:textColor="@color/black"
                        app:fontFamily="@font/poppins"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:background="#d3d3d3">

                    </View>

                    <TextView
                        android:id="@+id/wallet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_wallet_filled_money_tool"
                        android:drawablePadding="@dimen/dp_15"
                        android:padding="@dimen/dp_5"
                        android:layout_margin="@dimen/dp_5"
                        android:text="Wallet"
                        android:textColor="@color/black"
                        app:fontFamily="@font/poppins"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:background="#d3d3d3">

                    </View>

                    <TextView
                        android:id="@+id/store"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_store"
                        android:drawablePadding="@dimen/dp_15"
                        android:padding="@dimen/dp_5"
                        android:layout_margin="@dimen/dp_5"
                        android:text="Store"
                        android:textColor="@color/black"
                        app:fontFamily="@font/poppins"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:background="#d3d3d3">

                    </View>

                    <TextView
                        android:id="@+id/Call"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_call_black_24dp"
                        android:drawablePadding="@dimen/dp_15"
                        android:padding="@dimen/dp_5"
                        android:layout_margin="@dimen/dp_5"
                        android:text="Call History"
                        android:textColor="@color/black"
                        app:fontFamily="@font/poppins"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:background="#d3d3d3">

                    </View>

                    <TextView
                        android:id="@+id/InviteAFriend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_add_user"
                        android:drawablePadding="@dimen/dp_15"
                        android:padding="@dimen/dp_5"
                        android:layout_margin="@dimen/dp_5"
                        android:text="Invite a friend"
                        android:textColor="@color/black"
                        app:fontFamily="@font/poppins"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:background="#E9D98D">

                    </View>

                    <TextView
                        android:id="@+id/help"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_question_mark"
                        android:drawablePadding="@dimen/dp_15"
                        android:padding="@dimen/dp_5"
                        android:layout_margin="@dimen/dp_5"
                        android:text="Help"
                        android:textColor="@color/black"
                        app:fontFamily="@font/poppins"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:background="#E9D98D">

                    </View>

                </LinearLayout>

            </RelativeLayout>

        </ScrollView>

    </android.support.design.widget.NavigationView>

</LinearLayout>