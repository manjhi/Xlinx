<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Activities.PrivacyActivity">

    <include layout="@layout/app_bar_" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:fontFamily="@font/poppins"
                android:text="Who can..."
                android:textColor="@color/grey"
                android:textSize="@dimen/sp_16" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                app:cardCornerRadius="@dimen/dp_10"
                app:cardElevation="@dimen/dp_3">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10">

                    <TextView
                        android:id="@+id/PP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="See my Profile Picture"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/PP"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/proPicFriends"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_35"
                            android:layout_margin="@dimen/dp_5"
                            android:layout_weight="1"
                            android:background="@drawable/bg_btn_blue_round_corners"
                            android:fontFamily="@font/poppins"
                            android:text="Friends Only"
                            android:textAllCaps="false"
                            android:textColor="@color/white" />

                        <Button
                            android:id="@+id/proPicContacts"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_35"
                            android:layout_margin="@dimen/dp_5"
                            android:layout_weight="1"
                            android:background="@drawable/bg_btn_grey_round_corners"
                            android:fontFamily="@font/poppins"
                            android:text="Contacts"
                            android:textAllCaps="false"
                            android:textColor="@color/grey" />

                        <Button
                            android:id="@+id/proPicEveryone"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_35"
                            android:layout_margin="@dimen/dp_5"
                            android:layout_weight="1"
                            android:background="@drawable/bg_btn_grey_round_corners"
                            android:fontFamily="@font/poppins"
                            android:text="Everyone"
                            android:textAllCaps="false"
                            android:textColor="@color/grey" />

                    </LinearLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                app:cardCornerRadius="@dimen/dp_10"
                app:cardElevation="@dimen/dp_3">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10">

                    <TextView
                        android:id="@+id/LS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="See my last seen"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/LS"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/lastSeenFriends"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_35"
                            android:layout_margin="@dimen/dp_5"
                            android:layout_weight="1"
                            android:background="@drawable/bg_btn_blue_round_corners"
                            android:fontFamily="@font/poppins"
                            android:text="Friends Only"
                            android:textAllCaps="false"
                            android:textColor="@color/white" />

                        <Button
                            android:id="@+id/lastSeenContacts"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_35"
                            android:layout_margin="@dimen/dp_5"
                            android:layout_weight="1"
                            android:background="@drawable/bg_btn_grey_round_corners"
                            android:fontFamily="@font/poppins"
                            android:text="Contacts"
                            android:textAllCaps="false"
                            android:textColor="@color/grey" />

                        <Button
                            android:id="@+id/lastSeenNobody"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_35"
                            android:layout_margin="@dimen/dp_5"
                            android:layout_weight="1"
                            android:background="@drawable/bg_btn_grey_round_corners"
                            android:fontFamily="@font/poppins"
                            android:text="Nobody"
                            android:textAllCaps="false"
                            android:textColor="@color/grey" />

                    </LinearLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                app:cardCornerRadius="@dimen/dp_10"
                app:cardElevation="@dimen/dp_3">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10">

                    <TextView
                        android:id="@+id/About"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="See my Profile Picture"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/About"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/aboutFriends"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_35"
                            android:layout_margin="@dimen/dp_5"
                            android:layout_weight="1"
                            android:background="@drawable/bg_btn_blue_round_corners"
                            android:fontFamily="@font/poppins"
                            android:text="Friends Only"
                            android:textAllCaps="false"
                            android:textColor="@color/white" />

                        <Button
                            android:id="@+id/aboutEveryone"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_35"
                            android:layout_margin="@dimen/dp_5"
                            android:layout_weight="1"
                            android:background="@drawable/bg_btn_grey_round_corners"
                            android:fontFamily="@font/poppins"
                            android:text="Everyone"
                            android:textAllCaps="false"
                            android:textColor="@color/grey" />

                        <Button
                            android:id="@+id/aboutNobody"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_35"
                            android:layout_margin="@dimen/dp_5"
                            android:layout_weight="1"
                            android:background="@drawable/bg_btn_grey_round_corners"
                            android:fontFamily="@font/poppins"
                            android:text="Nobody"
                            android:textAllCaps="false"
                            android:textColor="@color/grey" />

                    </LinearLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                app:cardCornerRadius="@dimen/dp_10"
                app:cardElevation="@dimen/dp_3">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10">

                    <TextView
                        android:id="@+id/HMY"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="Hide my last"
                        android:textColor="@color/black" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/HMY">

                        <TextView
                            android:id="@+id/friends"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/poppins"
                            android:text="0 Friend"
                            android:textColor="@color/grey" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_keyboard_arrow_right_grey_24dp" />

                    </RelativeLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                app:cardCornerRadius="@dimen/dp_10"
                app:cardElevation="@dimen/dp_3">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10">

                    <TextView
                        android:id="@+id/HMS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="Hide my Stories"
                        android:textColor="@color/black" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/HMS">

                        <TextView
                            android:id="@+id/friend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/poppins"
                            android:text="0 Friend"
                            android:textColor="@color/grey" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_keyboard_arrow_right_grey_24dp" />

                    </RelativeLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                app:cardCornerRadius="@dimen/dp_10"
                app:cardElevation="@dimen/dp_3">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10">

                    <TextView
                        android:id="@+id/LL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="Live Location"
                        android:textColor="@color/black" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/LL">

                        <TextView
                            android:id="@+id/none"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/poppins"
                            android:text="None"
                            android:textColor="@color/grey" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_keyboard_arrow_right_grey_24dp" />

                    </RelativeLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:fontFamily="@font/poppins"
                android:text="Messaging"
                android:textColor="@color/blue"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/blockedContacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:fontFamily="@font/poppins"
                    android:text="Blocked Contacts: 7"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:fontFamily="@font/poppins"
                    android:text="List of contacts that you have blocked."
                    android:textColor="@color/grey" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_30"
                android:background="#d3d3d3"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_margin="@dimen/dp_10"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>