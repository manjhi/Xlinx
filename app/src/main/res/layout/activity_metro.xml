<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Activities.MetroActivity">

    <include layout="@layout/app_bar_" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bookTickets"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:layout_margin="@dimen/dp_5"
            android:layout_weight="1"
            android:background="@drawable/background_blue_button"
            android:fontFamily="@font/poppins"
            android:text="Book Tickets"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/checkPNR"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:layout_margin="@dimen/dp_5"
            android:layout_weight="1"
            android:background="@drawable/background_white_button"
            android:elevation="@dimen/dp_5"
            android:fontFamily="@font/poppins"
            android:text="Check PNR"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/trainStatus"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:layout_margin="@dimen/dp_5"
            android:layout_weight="1"
            android:background="@drawable/background_white_button"
            android:elevation="@dimen/dp_5"
            android:fontFamily="@font/poppins"
            android:text="Train Status"
            android:textAllCaps="false"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_15"
        android:background="@drawable/background_layout"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_20"
            android:gravity="bottom"
            android:textStyle="bold"
            android:textSize="@dimen/sp_15"
            android:fontFamily="@font/poppins"
            android:text="Source Station" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="7">

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="#d3d3d3" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_toRightOf="@id/view"
                android:layout_weight="6"
                android:elevation="@dimen/dp_5"
                android:padding="@dimen/dp_3"
                android:background="@drawable/background_layout"
                android:src="@drawable/ic_arrow_downward_black_24dp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_20"
            android:gravity="top"
            android:textStyle="bold"
            android:textSize="@dimen/sp_15"
            android:fontFamily="@font/poppins"
            android:text="Destination Station" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Departure Date"
        android:textColor="@color/grey"
        android:textStyle="bold"
        android:textSize="@dimen/sp_15"
        android:fontFamily="@font/poppins"
        android:layout_marginLeft="@dimen/dp_20"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mon, 19 Apr"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:fontFamily="@font/poppins"
            android:layout_centerVertical="true"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_calendar"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_15"/>

            <TextView
                android:layout_width="@dimen/dp_50"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:fontFamily="@font/poppins"
                android:textSize="@dimen/dp_10"
                android:textColor="@color/black"
                android:text="19 Apr Today"
                android:layout_margin="@dimen/dp_2"
                android:background="@drawable/background_layout"/>

            <TextView
                android:layout_width="@dimen/dp_50"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="@dimen/dp_10"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins"
                android:layout_margin="@dimen/dp_2"
                android:background="@drawable/background_layout"
                android:text="19 Apr Today"/>

            <TextView
                android:layout_width="@dimen/dp_50"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="@dimen/dp_10"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins"
                android:layout_margin="@dimen/dp_2"

                android:background="@drawable/background_layout"
                android:text="19 Apr Today"/>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#d3d3d3"
        android:layout_marginTop="@dimen/dp_10"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue"
        android:textColor="@color/grey"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:fontFamily="@font/poppins"
        android:text="Show both Non AC and AC coaches"/>

    <Button
        android:id="@+id/SearchTrains"
        android:layout_width="@dimen/dp_250"
        android:layout_height="@dimen/dp_45"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_40"
        android:text="Search Trains"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins"
        android:background="@drawable/background_button_round_corners"/>


</LinearLayout>