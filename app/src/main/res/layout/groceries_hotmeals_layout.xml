<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/hot_deals_recycler_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:elevation="7dp"
        app:cardCornerRadius="7dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5sp">

            <TextView
                android:id="@+id/hot_deals_recycler_card_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/poppins"
                android:text="Nutrition Supplements"
                android:textColor="#000"
                android:textSize="@dimen/sp_10" />

            <ImageView
                android:id="@+id/hot_deals_recycler_card_image"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_80"
                android:layout_below="@+id/hot_deals_recycler_card_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5sp"
                android:scaleType="fitXY"
                android:src="@drawable/hot_deals" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/hot_deals_recycler_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hot_deals_recycler_card"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins"
        android:textSize="@dimen/sp_10"
        android:maxWidth="120dp"
        android:textAlignment="center"
        android:text="Was at 5999 | Now\nat 3839"
        android:textColor="#000" />

</LinearLayout>